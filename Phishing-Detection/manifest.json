{
  "manifest_version": 2,
  "name": "Email Phishing Aid",
  "description": "Scrape and analyze the selected email for phishing risk.",
  "version": "1.0",
  "author": "Andrew",

  "browser_specific_settings": {
    "gecko": {
      "id": "phishing-aid@example.com",
      "strict_min_version": "128.0"
    }
  },

  "icons": {
    "64": "images/icon-64px.png",
    "32": "images/icon-32px.png",
    "16": "images/icon-16px.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "message_display_action": {
    "default_title": "Analyze email",
    "default_popup": "popup/popup.html",
    "default_icon": "images/icon-32px.png"
  },

  "permissions": [
    "storage",
    "messagesRead",
    "messagesModify",
    "messages",
    "downloads",
    "mailTabs"
  ],

  "message_display_scripts": [
    {
      "js": ["content/banner.js"],
      "css": ["content/banner.css"]
    }
  ]

}
